<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="backroundSquare">
        <item name="android:background">@color/colorpurple</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="layout">
        <item name="android:layout_width">750dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorBrown</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="middle_sections">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>

        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="sides_squares">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorpurple</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="middleButtons">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:layout_width">match_parent</item>


        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>




    <style name="top_textview">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_width">108dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>

    <style name="tower">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="bottom_button">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tower_text">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">x0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:gravity">center_horizontal</item>


    </style>

</resources>